@model ProjetoAlmoco.Web.Models.Usuario

@Styles.Render("~/Content/Login.css","~/Content/Site.css")
<div class="flex">
    @*@ViewBag.selectedUser*@
    <form method="post">
        @Html.ValidationSummary(true, "", new { @class = "texto" })
        <div class="login ">
            <img class="login__logo" src="~/Content/Img/logo-smn.png" alt="logo-smn">
            <div class="login__titulo">
                <h1>Log In</h1>
                <h3>Logue-se para desfrutar-se</h3>
            </div>
            <div class="login__form">
                <div class="login__form__Item">
                    @Html.EditorFor(model => model.NomeUsuario, new { htmlAttributes = new { @class = "login__input", placeholder = "LOGIN", autocomplete = "off" } })
                    <p>
                        @Html.ValidationMessageFor(model => model.NomeUsuario, "", new { @class = "texto" })
                    </p>
                </div>
                <div class="login__form__Item">
                    @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "login__input", placeholder = "SENHA", autocomplete = "off", type = "password" } })
                    <p>
                        @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "texto" })
                    </p>
                </div>
                <input class="login__link" type="submit" value="LOGAR">
                @Html.ActionLink(" Não tem um Cadastro?", "Index", "Cadastro", null, new { @class = "login__cadastro" })
            </div>
        </div>
    </form>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}